
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <h1>New Restaurant</h1>
      <%= simple_form_for [@restaurant] do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
        <%= f.submit "Add a restaurant", class: "btn btn-primary" %>
        <% end %>
          <%= link_to "Back to list", restaurants_path %>
    </div>
  </div>
</div>


